@page
@model NomadIndustriesWeb.Pages.FabricacionesModel
@{
    ViewData["Title"] = "Fabricaciones - Nomad Industrial";
}

<!-- Banner Principal -->
<section class="fabricaciones-hero-banner">
    <div class="fabricaciones-hero-content">
        <h1 class="fabricaciones-hero-title">FABRICACIONES</h1>
        <p class="fabricaciones-hero-subtitle">Componentes únicos, creados según tus requerimientos técnicos</p>
    </div>
</section>

<!-- Introducción -->
<section class="fabricaciones-intro container">
    <h2 class="intro-title">Fabricaciones únicas, adaptadas a tu operación.</h2>
    <p class="intro-text">
        En Nomad Industrial, desarrollamos piezas especializadas en distintos materiales, adaptadas a las necesidades específicas de cada cliente.
        Nuestro compromiso es entregar soluciones robustas, funcionales y precisas, bajo estándares de ingeniería avanzada.
    </p>
</section>

<!-- Materiales -->
<section class="materiales-section">
    <div class="container materiales-grid">
        <div class="materiales-list">
            <button class="material-btn active" data-img="inox" data-label="Acero inoxidable AISI 304, 316">
                <i class="fas fa-draw-polygon"></i> Acero inoxidable
            </button>
            <button class="material-btn" data-img="frp" data-label="FRP (Plástico Reforzado con Fibra de Vidrio)">
                <i class="fas fa-flask"></i> FRP
            </button>
            <button class="material-btn" data-img="carbono" data-label="Acero carbono ASTM A36">
                <i class="fas fa-cog"></i> Acero carbono
            </button>
        </div>
        <div class="materiales-image">
            <div class="material-label">Acero inoxidable AISI 304, 316</div>
            <img src="https://images.unsplash.com/photo-1581091226825-a6a2a5aee158?ixlib=rb-4.0.3&auto=format&fit=crop&w=1200&q=80" alt="Material seleccionado">
        </div>
    </div>
</section>

<!-- Proceso -->
<section class="proceso-section">
    <div class="container">
        <h2 class="proceso-title">Nuestro Proceso de Diseño y Fabricación Industrial</h2>
        <div class="proceso-grid">
            <div class="proceso-item">
                <div class="proceso-icon"><i class="fas fa-search"></i></div>
                <p class="proceso-text">Identificación de Necesidades</p>
            </div>
            <div class="proceso-arrow"><i class="fas fa-arrow-right"></i></div>
            <div class="proceso-item">
                <div class="proceso-icon"><i class="fas fa-vials"></i></div>
                <p class="proceso-text">Investigación y selección de materiales</p>
            </div>
            <div class="proceso-arrow"><i class="fas fa-arrow-right"></i></div>
            <div class="proceso-item">
                <div class="proceso-icon"><i class="fas fa-drafting-compass"></i></div>
                <p class="proceso-text">Diseño conceptual y detallado</p>
            </div>
            <div class="proceso-arrow"><i class="fas fa-arrow-right"></i></div>
            <div class="proceso-item">
                <div class="proceso-icon"><i class="fas fa-cubes"></i></div>
                <p class="proceso-text">Simulación, prototipado y validación</p>
            </div>
            <div class="proceso-arrow"><i class="fas fa-arrow-right"></i></div>
            <div class="proceso-item">
                <div class="proceso-icon"><i class="fas fa-industry"></i></div>
                <p class="proceso-text">Producción y control de calidad</p>
            </div>
            <div class="proceso-arrow"><i class="fas fa-arrow-right"></i></div>
            <div class="proceso-item">
                <div class="proceso-icon"><i class="fas fa-hands-helping"></i></div>
                <p class="proceso-text">Entrega y soporte postventa</p>
            </div>
        </div>
    </div>
</section>

<!-- Contacto -->
<section class="contacto-cta">
    <div class="contacto-header">
        <div class="container">
            <a href="/contacto" class="contacto-titulo-link">
                <h2 class="contacto-titulo">Contáctanos</h2>
            </a>
        </div>
    </div>

    <div class="contacto-container">
        <div class="container">
            <div class="contacto-contenido">
                <div class="contacto-izquierda">
                    <div class="contacto-logo-container">
                        <img src="~/images/nomad-logo.png" alt="Nomad Industrial" class="contacto-logo" />
                    </div>

                    <!-- Línea divisoria entre logo y texto -->
                    <div class="contacto-linea-divisoria"></div>

                    <p class="contacto-texto-grande">¿Interesado en este servicio?<br>Contáctanos y hablemos sobre tu proyecto.</p>
                </div>

                <div class="contacto-derecha">
                    <div class="contacto-item">
                        <i class="fas fa-envelope contacto-icono-simple"></i>
                        <span class="contacto-texto-principal">nomadlindustrial@correo.com</span>
                    </div>

                    <div class="contacto-item">
                        <i class="fas fa-phone contacto-icono-simple"></i>
                        <span class="contacto-texto-principal">+56912345678</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Espacio para futuro formulario -->
<section class="formulario-placeholder">
    <div class="container">
        <p class="placeholder-text">Agregar luego formulario</p>
    </div>
</section>

<style>
    /* Banner Principal */
    .fabricaciones-hero-banner {
        position: relative;
        height: 60vh;
        min-height: 400px;
        margin-top: -110px;
        padding-top: 110px;
        background-image: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), url('https://images.unsplash.com/photo-1581091226825-a6a2a5aee158?ixlib=rb-4.0.3&auto=format&fit=crop&w=1200&q=80');
        background-size: cover;
        background-position: center;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: white;
    }

    .fabricaciones-hero-title {
        font-size: 4rem;
        font-weight: bold;
    }

    .fabricaciones-hero-subtitle {
        font-size: 1.4rem;
        font-weight: 300;
    }

    /* Introducción */
    .fabricaciones-intro {
        margin: 60px auto;
    }

    .intro-title {
        font-size: 2rem;
        font-weight: bold;
        color: #1451c4;
        margin-bottom: 15px;
    }

    .intro-text {
        font-size: 1.1rem;
        line-height: 1.6;
        color: #444;
    }

    /* Materiales */
    .materiales-section {
        background-color: #e9f0fb;
        padding: 60px 0;
    }

    .materiales-grid {
        display: grid;
        grid-template-columns: 300px 1fr;
        gap: 30px;
        align-items: start;
    }

    .materiales-list {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .material-btn {
        display: flex;
        align-items: center;
        gap: 10px;
        background-color: rgba(20, 81, 196, 0.1);
        border: none;
        padding: 15px;
        font-size: 1.1rem;
        border-radius: 10px;
        color: rgba(0,0,0,0.5);
        font-weight: bold;
        transition: all 0.3s ease;
        cursor: pointer;
    }

        .material-btn i {
            font-size: 1.3rem;
        }

        .material-btn:hover,
        .material-btn.active {
            background-color: #1451c4;
            color: white;
        }

    .materiales-image {
        position: relative;
    }

    .material-label {
        position: absolute;
        top: 15px;
        left: 15px;
        background: rgba(0,0,0,0.6);
        color: white;
        padding: 8px 12px;
        border-radius: 4px;
        font-size: 0.95rem;
    }

    .materiales-image img {
        width: 100%;
        border-radius: 8px;
        border: 5px solid #1451c4;
        object-fit: cover;
    }

    /* Proceso */
    .proceso-section {
        background-color: white;
        padding: 60px 0;
        text-align: center;
    }

    .proceso-title {
        font-size: 2rem;
        font-weight: bold;
        color: #1451c4;
        margin-bottom: 40px;
    }

    .proceso-grid {
        display: grid;
        grid-template-columns: repeat(11, auto);
        gap: 10px;
        align-items: center;
    }

    .proceso-item {
        text-align: center;
    }

    .proceso-icon {
        width: 80px;
        height: 80px;
        border: 2px solid #ddd;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        margin: 0 auto 10px;
        color: #1451c4;
    }

    .proceso-arrow {
        font-size: 1.8rem;
        color: #ccc;
    }

    .proceso-text {
        font-size: 1rem;
        font-weight: 600;
        color: #444;
        line-height: 1.4;
    }

    /* Contacto - Nueva estructura */
    .contacto-cta {
        background: white;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .contacto-header {
        background-color: #1451c4;
        padding: 20px 0;
        text-align: center;
    }

    .contacto-titulo-link {
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .contacto-titulo-link:hover {
            transform: translateY(-2px);
        }

    .contacto-titulo {
        font-size: 2.5rem;
        font-weight: bold;
        color: white;
        margin: 0;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .contacto-titulo:hover {
            color: #f0f8ff;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
        }

    .contacto-container {
        background: linear-gradient(135deg, #e8f2ff 0%, #d4e8ff 100%);
        padding: 50px 0;
    }

    .contacto-contenido {
        display: flex;
        align-items: flex-start;
        gap: 40px;
    }

    .contacto-izquierda {
        flex: 2;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 25px;
    }

    .contacto-logo-container {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 15px;
        padding: 15px 20px;
        border: 2px solid rgba(20, 81, 196, 0.2);
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .contacto-logo {
        max-width: 180px;
        height: auto;
        display: block;
    }

    /* Línea divisoria mejorada */
    .contacto-linea-divisoria {
        width: 200px;
        height: 3px;
        background: linear-gradient(90deg, rgba(20, 81, 196, 0.3) 0%, #1451c4 50%, rgba(20, 81, 196, 0.3) 100%);
        border-radius: 2px;
        margin: 10px 0;
    }

    .contacto-texto-grande {
        font-size: 2rem;
        font-weight: bold;
        line-height: 1.3;
        color: #1451c4;
        text-align: center;
    }

    .contacto-derecha {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 20px;
        align-items: flex-start;
        justify-content: center;
        padding-top: 80px;
    }

    .contacto-item {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .contacto-icono-simple {
        font-size: 3rem;
        color: #1451c4;
    }

    .contacto-texto-principal {
        font-size: 2.5rem;
        font-weight: bold;
        color: #1451c4;
        line-height: 1.2;
    }

    /*  formulario */
    .formulario-placeholder {
        background-color: #f8f9fa;
        padding: 80px 0;
        text-align: center;
        border-top: 1px solid #e9ecef;
    }

    .placeholder-text {
        font-size: 1.2rem;
        color: #6c757d;
        font-style: italic;
        margin: 0;
        opacity: 0.7;
    }

    /* Responsive */
    @@media (max-width: 992px) {
        .proceso-grid {
            grid-template-columns: repeat(6, auto);
        }

        .materiales-grid {
            grid-template-columns: 1fr;
            gap: 20px;
        }
    }

    @@media (max-width: 768px) {
        .contacto-contenido {
            flex-direction: column;
            gap: 30px;
        }

        .contacto-derecha {
            width: 100%;
            max-width: none;
        }

        .contacto-titulo {
            font-size: 2rem;
        }

        .contacto-texto-grande {
            font-size: 1.7rem;
        }

        .contacto-icono-simple {
            font-size: 3rem;
        }

        .contacto-texto-principal {
            font-size: 2.2rem;
        }

        .proceso-grid {
            grid-template-columns: repeat(3, auto);
        }
    }

    @@media (max-width: 480px) {
        .contacto-header {
            padding: 25px 20px;
        }

        .contacto-container {
            padding: 35px 0;
        }

        .contacto-titulo {
            font-size: 1.8rem;
        }

        .contacto-texto-grande {
            font-size: 1.5rem;
        }

        .contacto-icono-simple {
            font-size: 2rem;
        }

        .contacto-texto-principal {
            font-size: 1.1rem;
        }

        .contacto-logo-container {
            padding: 10px 15px;
        }

        .contacto-logo {
            max-width: 150px;
        }

        .contacto-linea-divisoria {
            width: 150px;
            height: 2px;
        }

        .contacto-item {
            padding: 15px;
        }
    }
</style>

<script>
    const materialImages = {
        inox: "https://images.unsplash.com/photo-1581091226825-a6a2a5aee158?ixlib=rb-4.0.3&auto=format&fit=crop&w=1200&q=80",
        frp: "https://images.unsplash.com/photo-1581091226825-a6a2a5aee158?ixlib=rb-4.0.3&auto=format&fit=crop&w=1200&q=80",
        carbono: "https://images.unsplash.com/photo-1581091226825-a6a2a5aee158?ixlib=rb-4.0.3&auto=format&fit=crop&w=1200&q=80"
    };

    document.querySelectorAll('.material-btn').forEach(btn => {
        btn.addEventListener('click', () => {
            document.querySelectorAll('.material-btn').forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
            const img = document.querySelector('.materiales-image img');
            const label = document.querySelector('.material-label');
            const key = btn.dataset.img;
            label.textContent = btn.dataset.label;
            img.src = materialImages[key];
        });
    });
</script>