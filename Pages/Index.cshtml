        color: #333;
        padding: 10px 25px;
        font-size: 0.9rem;
        font-weight: bold;
        border: none;
        border-radius: 25px;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        box-shadow: 0 3px 10px rgba(241, 196, 15, 0.3);
    }

        .category-btn:hover {
            background-color: #e8b90f;
            color: #333;
            text-decoration: none;
            transform: translateY(-2px);
