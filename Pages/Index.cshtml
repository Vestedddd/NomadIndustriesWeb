        font-size: 0.9rem;
        margin-bottom: 20px;
    }

    .service-icon {
        font-size: 2.5rem;
        bottom: 15px;
        right: 20px;
    }

    
    .about-content {
        flex-direction: column;
        gap: 40px;
    }

    .about-title {
        font-size: 2rem;
    }

    .mission-vision-buttons {
        flex-direction: column;
    }

    .about-image img {
        height: 400px;
    }

    .about-section {
        padding: 60px 0;
    }

    }

