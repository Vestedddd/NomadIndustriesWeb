    function showContent(type) {
        
        document.querySelectorAll('.mv-button').forEach(btn => {
            btn.classList.remove('active');
        });

        
        document.querySelectorAll('.mv-content').forEach(content => {
            content.classList.remove('active');
        });

        
        event.target.classList.add('active');

        
        document.getElementById(type).classList.add('active');
    }

    // Función para manejar clics en los botones con navegación
    document.addEventListener('DOMContentLoaded', function() {
        document.querySelectorAll('.mv-button').forEach(button => {
            button.addEventListener('click', function(e) {
                const isActive = this.classList.contains('active');

                if (!isActive) {
                    
                    const type = this.textContent.includes('Misión') ? 'mission' : 'vision';
                    showContent(type);
                } else {
                    
                    const target = this.getAttribute('data-target');
                    window.location.href = `/sobre-nosotros${target}`;
                }
            });
        });
    });
</script>