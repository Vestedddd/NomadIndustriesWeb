        margin-bottom: 12px;
    }

    .service-description {
        font-size: 0.85rem;
        margin-bottom: 18px;
    }

    .service-btn {
        padding: 8px 16px;
        font-size: 0.8rem;
    }

    .service-icon {
        font-size: 2rem;
        bottom: 12px;
        right: 15px;
    }

