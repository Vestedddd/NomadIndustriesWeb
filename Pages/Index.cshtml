        border-radius: 15px;
        padding: 40px 30px 30px 30px;
        height: 400px;
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
        box-shadow: 0 5px 20px rgba(20, 81, 196, 0.2);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .service-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 35px rgba(20, 81, 196, 0.3);
        }

        .service-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
            transition: left 0.5s ease;
        }

        .service-card:hover::before {
            left: 100%;
        }

    .service-content {
        color: white;
        z-index: 2;
        position: relative;
    }

    .service-title {
        font-size: 1.4rem;
        font-weight: bold;
        margin-bottom: 20px;
        color: white;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
    }

    .service-description {
