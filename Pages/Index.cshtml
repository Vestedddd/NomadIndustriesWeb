        flex: 1;
        position: relative;
    }

        .about-image img {
            width: 100%;
            height: 500px;
            object-fit: cover;
            border-radius: 15px;
            box-shadow: 0 15px 40px rgba(0,0,0,0.15);
        }

   @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    
    @@media (max-width: 768px) {
        .hero-banner

    {
        height: 70vh;
        min-height: 500px;
        background-attachment: scroll;
    }

