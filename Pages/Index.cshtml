    .about-title {
        font-size: 1.8rem;
    }

    .mission-vision-content {
        padding: 1.5rem;
        min-height: 160px;
    }

    .about-image img {
        height: 300px;
    }

    }

    /* Ajuste cuando el header superior está oculto */
    body.scrolled .hero-banner {
        margin-top: -70px;
        padding-top: 70px;
    }
