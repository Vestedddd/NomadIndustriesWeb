@page
@model IndexModel
@{
    ViewData["Title"] = "Inicio";
}

<!-- Banner Principal -->
<section class="hero-banner">
    <div class="hero-content">
        <h1 class="hero-title">Transformamos la industria con tecnología avanzada</h1>
        <a href="/productos" class="hero-btn">Ver Productos</a>
    </div>
</section>

<!-- Sección de Categorías de Productos -->
<section class="categories-section">
    <div class="container">
        <div class="section-title">
            <h2>Productos destacados</h2>
            
        </div>
        <div class="row">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6 mx-auto">
                <div class="category-card" style="background: linear-gradient(135deg, #1451c4 0%, #2980b9 100%);">
                    <div class="category-content">
                        <h3 class="category-title">Sensores de Monitoreo Industrial IoT</h3>
                        <p class="category-description">Plataforma inalámbrica completa para equipos industriales</p>
                        <a href="/productos#industrial" class="category-btn">Ver Ahora</a>
                    </div>
                </div>
            </div>

        
        </div>
    </div>
</section>

<!-- Sección de Servicios -->
<section class="services-section">
    <div class="container">
        <div class="section-title">
            <a href="/servicios" class="services-title-link">
                <h2>Nuestros servicios</h2>
            </a>
            <p class="services-subtitle">Algunos de nuestros servicios especializados</p>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="service-card">
                    <div class="service-content">
                        <h3 class="service-title">Ingeniería inversa</h3>
                        <p class="service-description">
                            Transformamos piezas físicas en modelos digitales precisos,
                            asegurando compatibilidad, funcionalidad y mejoras continuas
                            en cada componente técnico.
                        </p>
