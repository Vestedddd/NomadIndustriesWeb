@page
@model NomadIndustriesWeb.Pages.ServiciosModel
@{
    ViewData["Title"] = "Servicios - Nomad Industrial";
}

<!-- Banner Principal -->
<section class="servicios-hero-banner">
    <div class="servicios-hero-content">
        <h1 class="servicios-hero-title">SERVICIOS</h1>
        <p class="servicios-hero-subtitle">Soluciones Integrales de Ingeniería Industrial</p>
    </div>
</section>

<!-- Servicios Principal -->
<section class="servicios-main-section">
    <div class="container">
        <div class="servicios-container">
            <!-- Cuadro de servicios -->
            <div class="servicios-selector-box">
                <h3 class="servicios-box-title">Servicios</h3>
                <!-- Botones de servicios -->
                <div class="servicios-buttons">
                    <button class="servicio-btn active" data-servicio="proyectos-customizada">
                        <i class="fas fa-industry"></i>
                        <span>Proyectos de Ingeniería Customizada</span>
                    </button>
                    <button class="servicio-btn" data-servicio="ingenieria-inversa">
                        <i class="fas fa-cogs"></i>
                        <span>Ingeniería Inversa</span>
                    </button>
                    <button class="servicio-btn" data-servicio="levantamiento-3d">
                        <i class="fas fa-camera"></i>
                        <span>Levantamiento 3D Industrial</span>
                    </button>
                    <button class="servicio-btn" data-servicio="nube-puntos">
                        <i class="fas fa-cloud"></i>
                        <span>Procesamiento Nube de Puntos</span>
                    </button>
                    <button class="servicio-btn" data-servicio="monitoreo-iot">
                        <i class="fas fa-wifi"></i>
                        <span>Monitoreo IoT y Mantenimiento Predictivo</span>
                    </button>
                </div>
            </div>

            <!-- Información resumida del servicio -->
            <div class="servicio-info-resumida">
                <h3 class="servicio-nombre">Proyectos de Ingeniería Customizada</h3>
                <p class="servicio-resumen">
                    Diseñamos, fabricamos y suministramos soluciones industriales innovadoras a medida, integrando materiales nobles, tecnología IoT y sensores inteligentes para crear sistemas que optimizan procesos, reducen downtime y protegen activos industriales con implementación ágil y sin interrupciones operacionales.
                </p>
                <div class="btn-container">
                    <button class="btn-ver-mas" id="btnVerMas" onclick="toggleDescripcionDetalle()">
                        <span class="btn-text">Ver más</span> <i class="fas fa-chevron-down btn-icon"></i>
                    </button>
                </div>
            </div>

            <!-- Imagen del servicio -->
            <div class="servicio-imagen-box">
                <img src="https://images.unsplash.com/photo-1581091226825-a6a2a5aee158?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80" alt="Servicio seleccionado" class="servicio-imagen">
            </div>
        </div>
    </div>
</section>

<!-- Descripción Detallada Desplegable -->
<section id="descripcionDetalle" class="descripcion-detalle-section">
    <div class="container">
        <div class="descripcion-detalle-content">
            <div class="descripcion-header">
                <h2 id="descripcionTitulo" class="descripcion-titulo">Descripción del servicio</h2>
                <button class="btn-cerrar-detalle" onclick="ocultarDescripcionDetalle()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="descripcion-body">
                <div id="descripcionContenido" class="descripcion-contenido">
                    <!-- Contenido será cargado dinámicamente -->
                </div>
                <div class="descripcion-contacto">
                    <button class="btn-contacto-servicio" onclick="window.location.href='/Contacto'">
                        <i class="fas fa-envelope"></i> Contactar para este servicio
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Nota de enfoque de servicios -->
<section class="servicios-nota-section">
    <div class="container">
        <p class="servicios-nota">
            <em>Todos nuestros servicios se desarrollan con enfoque en sostenibilidad, eficiencia energética y protección integral de personas, equipos y medioambiente.</em>
        </p>
    </div>
</section>

<!-- Contacto -->
<section class="contacto-servicios-compacto">
    <div class="container">
        <div class="contacto-compacto-grid">
            <div class="contacto-compacto-box">
                <a href="/Contacto" class="contacto-compacto-title-link">
                    <h3 class="contacto-compacto-title">Contáctanos</h3>
                </a>

                <div class="contacto-compacto-logo">
                    <img src="~/images/nomad-logo.png" alt="Nomad Industrial" />
                </div>

                <div class="contacto-compacto-divisor"></div>

                <p class="contacto-compacto-texto">¿Interesado en nuestros servicios?<br>Contáctanos y hablemos sobre tu proyecto</p>
                <div class="contacto-compacto-info">
                    <div class="contacto-compacto-item">
                        <i class="fas fa-envelope"></i>
                        <span>ventas@nomadspa.cl</span>
                    </div>
                    <div class="contacto-compacto-item">
                        <i class="fas fa-phone"></i>
                        <span>+56912345678</span>
                    </div>
                </div>
            </div>

            <div class="formulario-compacto-box">
                @await Html.PartialAsync("_FormularioContacto", null, new ViewDataDictionary(ViewData) { { "FormId", "servicios" } })
            </div>
        </div>
    </div>
</section>
