        const servicioParam = urlParams.get('servicio');

        if (servicioParam && serviciosData[servicioParam]) {
            servicioActivo = servicioParam;
            buttons.forEach(btn => btn.classList.remove('active'));
            const targetButton = document.querySelector(`[data-servicio="${servicioParam}"]`);
            if (targetButton) {
                targetButton.classList.add('active');
                cambiarServicio(servicioParam);
            }
        }

        function cambiarServicio(servicioId) {
            servicioActivo = servicioId;
            const data = serviciosData[servicioId];

            if (data) {
                servicioNombre.textContent = data.nombre;
                servicioResumen.textContent = data.resumen;
                servicioImagen.src = data.imagen;

                // Si la descripción está abierta, actualizar su contenido
                if (descripcionAbierta) {
                    actualizarContenidoDescripcion();
                }
            }
        }

        function actualizarContenidoDescripcion() {
            const descripcionTitulo = document.getElementById('descripcionTitulo');
            const descripcionContenido = document.getElementById('descripcionContenido');

            descripcionTitulo.textContent = `Descripción del servicio - ${serviciosData[servicioActivo].nombre}`;
            descripcionContenido.innerHTML = contenidoExtendido[servicioActivo] || '<p>Contenido no disponible</p>';
        }

        // Event listeners para botones de servicios
        buttons.forEach(button => {
            button.addEventListener('click', function() {
                const servicioId = this.getAttribute('data-servicio');
                buttons.forEach(btn => btn.classList.remove('active'));
                this.classList.add('active');
                cambiarServicio(servicioId);
            });
        });

        // Función global para toggle de descripción
        window.toggleDescripcionDetalle = function() {
            const descripcionSection = document.getElementById('descripcionDetalle');
            const btnVerMas = document.getElementById('btnVerMas');
            const btnText = btnVerMas.querySelector('.btn-text');
            const btnIcon = btnVerMas.querySelector('.btn-icon');

            if (!descripcionAbierta) {
                // Abrir descripción
                descripcionAbierta = true;
                actualizarContenidoDescripcion();
                descripcionSection.classList.add('show');
                btnVerMas.classList.add('expanded');
                btnText.textContent = 'Ver menos';
                btnIcon.style.transform = 'rotate(180deg)';

                // Scroll suave hacia la descripción
                setTimeout(() => {
                    descripcionSection.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }, 200);
            } else {
                // Cerrar descripción
                ocultarDescripcionDetalle();
            }
        };

        // Función global para ocultar descripción
        window.ocultarDescripcionDetalle = function() {
            const descripcionSection = document.getElementById('descripcionDetalle');
            const btnVerMas = document.getElementById('btnVerMas');
            const btnText = btnVerMas.querySelector('.btn-text');
            const btnIcon = btnVerMas.querySelector('.btn-icon');

            descripcionAbierta = false;
            descripcionSection.classList.remove('show');
            btnVerMas.classList.remove('expanded');
            btnText.textContent = 'Ver más';
            btnIcon.style.transform = 'rotate(0deg)';

            // Scroll suave hacia los servicios
            document.querySelector('.servicios-main-section').scrollIntoView({
                behavior: 'smooth',
                block: 'start'
            });
        };
    });
