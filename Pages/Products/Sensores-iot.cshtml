@page
@{
    ViewData["Title"] = "Productos - Nomad Industrial";
}

<!-- Banner Principal -->
<section class="products-hero-banner">
    <div class="products-hero-content">
        <h1 class="products-hero-title">PRODUCTOS</h1>
        <p class="products-hero-subtitle">Soluciones IoT robustas para monitoreo industrial avanzado</p>
    </div>
</section>

<!-- Sección 1: Sensores de Monitoreo de Equipos Industriales IoT -->
<section class="category-section">
    <div class="container">
        <div class="category-header">
            <div class="category-title-section">
                <div class="category-indicator"></div>
                <h2 class="category-title">SENSORES DE MONITOREO DE EQUIPOS INDUSTRIALES IoT</h2>
            </div>
            <p class="category-description">
                Tecnología avanzada para el monitoreo continuo de equipos industriales críticos, proporcionando datos en tiempo real para optimizar el rendimiento y prevenir fallas.
            </p>
        </div>

        <!-- Grid de Productos Industriales -->
        <div class="products-grid two-products">
            <div class="product-card">
                <a href="/productos/ver/sensor1" class="product-image">
                    <div class="nomad-logo">
                        <img src="~/images/nomad-logo.png" alt="Nomad Industrial" />
                    </div>
                    <img src="~/images\Productos\SensoresIot\sensor1.png" alt="AT-R1 Sensor Industrial" />
                </a>
                <h3 class="product-name">AT-R1</h3>
            </div>

            <div class="product-card">
                <a href="/productos/ver/sensor2" class="product-image">
                    <div class="nomad-logo">
                        <img src="~/images/nomad-logo.png" alt="Nomad Industrial" />
                    </div>
                    <img src="~/images\Productos\SensoresIot\sensor2.png" alt="ND-ATOMS-N1 AT-R Sensor" />
                </a>
                <h3 class="product-name">ND-ATOMS-N1 AT-R</h3>
            </div>
        </div>
    </div>
</section>

<!-- Sección 2: Sensores de Monitoreo Lubricación IoT -->
<section class="category-section">
    <div class="container">
        <div class="category-header">
            <div class="category-title-section">
                <div class="category-indicator"></div>
                <h2 class="category-title">SENSORES DE MONITOREO LUBRICACIÓN IoT</h2>
            </div>
            <p class="category-description">
                Soluciones especializadas para el monitoreo inteligente de aceites y lubricantes, detectando contaminación, niveles y calidad para mantener la integridad de sus equipos.
            </p>
        </div>

        <!-- Grid de Productos Lubricación -->
        <div class="products-grid three-products">
            <div class="product-card">
                <a href="/productos/ver/lubricacion1" class="product-image">
                    <div class="nomad-logo">
                        <img src="~/images/nomad-logo.png" alt="Nomad Industrial" />
                    </div>
                    <img src="~/images/Productos/SensoresLubricación/lubricacion1.png" alt="QW3100 Sensor de Calidad de Aceite" />
                </a>
                <h3 class="product-name">QW3100</h3>
            </div>

            <div class="product-card">
                <a href="/productos/ver/lubricacion2" class="product-image">
                    <div class="nomad-logo">
                        <img src="~/images/nomad-logo.png" alt="Nomad Industrial" />
                    </div>
                    <img src="~/images/Productos/SensoresLubricación/lubricacion2.png" alt="LH2500 Sensor de Nivel de Aceite" />
                </a>
                <h3 class="product-name">LH2500</h3>
            </div>

            <div class="product-card">
                <a href="/productos/ver/lubricacion3" class="product-image">
                    <div class="nomad-logo">
                        <img src="~/images/nomad-logo.png" alt="Nomad Industrial" />
                    </div>
                    <img src="~/images/Productos/SensoresLubricación/lubricacion3.png" alt="VB1100 Sensor de Vibración" />
                </a>
                <h3 class="product-name">VB1100</h3>
            </div>
        </div>
    </div>
</section>
<style>
    /* Banner Principal Productos */
    .products-hero-banner {
        position: relative;
        height: 60vh;
        min-height: 400px;
        margin-top: -110px;
        padding-top: 110px;
        background-image: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), url('https://images.unsplash.com/photo-1581091226825-a6a2a5aee158?ixlib=rb-4.0.3&auto=format&fit=crop&w=1200&q=80');
        background-size: cover;
        background-position: center;
        background-attachment: scroll;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: white;
    }

    .products-hero-content {
        max-width: 800px;
        padding: 0 20px;
    }

    .products-hero-title {
        font-size: 4rem;
        font-weight: bold;
        margin-bottom: 20px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        line-height: 1.2;
        letter-spacing: 2px;
    }

    .products-hero-subtitle {
        font-size: 1.4rem;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
        font-weight: 300;
        line-height: 1.4;
    }

    /* Secciones de Categorías */
    .category-section {
        padding: 80px 0 60px 0;
        background-color: white;
    }

        .category-section:nth-child(even) {
            background-color: #f8f9fa;
        }

    .category-header {
        margin-bottom: 50px;
        text-align: left;
    }

    .category-title-section {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 15px;
    }

    .category-indicator {
        width: 4px;
        height: 60px;
        background-color: #1451c4;
        border-radius: 2px;
    }

    .category-title {
        font-size: 2rem;
        font-weight: bold;
        color: #1451c4;
        line-height: 1.2;
        margin: 0;
    }

    .category-description {
        font-size: 1.1rem;
        color: #666;
        margin: 0;
        padding-left: 19px;
        line-height: 1.6;
    }

    /* Grid de Productos */
    .products-grid {
        display: grid;
        gap: 30px;
        margin-bottom: 20px;
    }

        .products-grid.two-products {
            grid-template-columns: repeat(2, 1fr);
            max-width: 800px;
            margin: 0 auto 20px auto;
        }

        .products-grid.three-products {
            grid-template-columns: repeat(3, 1fr);
        }

    .product-card {
        text-align: center;
        transition: all 0.3s ease;
    }

        .product-card:hover {
            transform: translateY(-5px);
        }

    .product-image {
        width: 100%;
        height: 280px;
        background-color: white;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 20px;
        overflow: hidden;
        transition: all 0.3s ease;
        border: 2px solid #e9ecef;
        text-decoration: none;
        padding: 20px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        position: relative;
    }

        .product-image:hover {
            border-color: #1451c4;
            box-shadow: 0 8px 25px rgba(20, 81, 196, 0.15);
            text-decoration: none;
        }

        .product-image > img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            transition: transform 0.3s ease;
        }

        .product-image:hover > img {
            transform: scale(1.05);
        }

    .nomad-logo {
        position: absolute;
        top: 12px;
        right: 12px;
        width: 55px;
        height: auto;
        background: rgba(255, 255, 255, 0.95);
        padding: 8px;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid rgba(20, 81, 196, 0.1);
        z-index: 2;
    }

        .nomad-logo img {
            width: 100%;
            height: auto;
            object-fit: contain;
            transform: none !important;
        }

    .product-placeholder {
        color: #ccc;
        font-size: 3rem;
    }

    .product-name {
        font-size: 1.2rem;
        font-weight: 600;
        color: #333;
        margin: 0;
        line-height: 1.3;
    }

    .product-card a {
        text-decoration: none;
    }

    .product-card:hover .product-name {
        color: #1451c4;
    }

    /* Responsive */
    @@media (max-width: 992px) {
        .products-grid.two-products

    {
        grid-template-columns: 1fr;
        max-width: 400px;
    }

    .products-grid.three-products {
        grid-template-columns: repeat(2, 1fr);
        gap: 25px;
    }

    .category-title {
        font-size: 1.6rem;
    }

    .product-image {
        height: 250px;
    }

    .nomad-logo {
        width: 50px;
        top: 10px;
        right: 10px;
    }

    }

    @@media (max-width: 768px) {
        .products-hero-banner

    {
        height: 50vh;
        min-height: 350px;
        background-attachment: scroll;
    }

    .products-hero-title {
        font-size: 2.8rem;
        margin-bottom: 15px;
    }

    .products-hero-subtitle {
        font-size: 1.2rem;
    }

    .category-section {
        padding: 60px 0 40px 0;
    }

    .category-header {
        margin-bottom: 40px;
    }

    .category-title-section {
        flex-direction: column;
        align-items: flex-start;
        gap: 10px;
    }

    .category-indicator {
        width: 60px;
        height: 4px;
    }

    .category-description {
        padding-left: 0;
    }

    .products-grid.three-products {
        grid-template-columns: 1fr;
        gap: 20px;
    }

    .product-image {
        height: 220px;
        padding: 15px;
    }

    .nomad-logo {
        width: 45px;
        top: 8px;
        right: 8px;
        padding: 6px;
    }

    }

    @@media (max-width: 480px) {
        .products-hero-title

    {
        font-size: 2.2rem;
    }

    .products-hero-subtitle {
        font-size: 1rem;
    }

    .category-title {
        font-size: 1.4rem;
    }

    .product-image {
        height: 200px;
    }

    .nomad-logo {
        width: 40px;
    }

    }

    body.scrolled .products-hero-banner {
        margin-top: -70px;
        padding-top: 70px;
    }
</style>