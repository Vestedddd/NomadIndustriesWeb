    .data-flow-particles {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 2;
    }

    .flow-particle {
        position: absolute;
        width: 8px;
        height: 8px;
        background: #ffd700;
        border-radius: 50%;
        box-shadow: 0 0 10px rgba(255, 215, 0, 0.7);
    }

    .particle-sensor {
        top: 50%;
        left: 15%;
        animation: flowSensorToGateway 4s ease-in-out infinite;
    }

    .particle-gateway {
        top: 50%;
