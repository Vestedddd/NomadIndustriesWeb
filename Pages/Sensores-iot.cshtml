    }

    .particle-mobile {
        top: 30%;
        left: 52%;
        animation: flowCloudToMobile 4s ease-in-out infinite;
        animation-delay: 1.6s;
    }

    .particle-dashboard {
        top: 50%;
        left: 52%;
        animation: flowCloudToDashboard 4s ease-in-out infinite;
        animation-delay: 2.4s;
    }

    .particle-api {
        top: 70%;
