            color: #333;
        }

    @@keyframes notificationPulse {
        0%, 100%

    {
        transform: scale(1);
    }

    50% {
        transform: scale(1.2);
    }

    }

    .dashboard-activity {
        position: absolute;
        top: -3px;
        right: -3px;
        width: 12px;
        height: 12px;
        background: #00ff00;
        border-radius: 50%;
        animation: dashboardBlink 1s ease-in-out infinite alternate;
    }

    @@keyframes dashboardBlink {
        0%

    {
        opacity: 0.3;
    }

    100% {
        opacity: 1;
    }

    }

    .api-indicator {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 70px;
        height: 70px;
        border: 2px solid #00ff00;
        border-radius: 50%;
        animation: apiRotate 3s linear infinite;
    }

    @@keyframes apiRotate {
        0%

    {
        transform: translate(-50%, -50%) rotate(0deg);
    }

    100% {
        transform: translate(-50%, -50%) rotate(360deg);
    }

    }

    .sensor-label, .gateway-label, .cloud-label, .service-label {
        font-size: 0.95rem;
        color: #666;
        font-weight: 600;
        display: block;
    }

    /* Líneas de Conexión Simplificadas */
    .connection-lines-simplified {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 1;
    }

    .connection-line {
        position: absolute;
        height: 3px;
        background: linear-gradient(90deg, transparent, #1451c4, transparent);
        animation: connectionFlow 3s ease-in-out infinite;
    }

    /* Sensor → Gateway */
    .sensor-to-gateway {
        top: 47%;
        left: 18%;
        width: 10%;
        transform: translateY(-50%);
        animation-delay: 0s;
    }

    /* Gateway → Nube */
    .gateway-to-cloud {
        top: 47%;
        left: 40.6%;
        width: 9%;
        transform: translateY(-50%);
        animation-delay: 0.6s;
    }

    /* Nube → Alertas Móviles */
    .cloud-to-mobile {
        top: 37%;
        left: 64.5%;
        width: 20%;
        transform: translateY(-50%) rotate(-35deg);
        transform-origin: left center; 
        animation-delay: 1.2s;
    }

    /* Nube → Dashboards */
    .cloud-to-dashboard {
        top: 47%;
        left: 67.7%;
        width: 13%;
        transform: translateY(-50%);
        animation-delay: 1.8s;
    }

    /* Nube → API */
    .cloud-to-api {
        top: 53%;
        left: 64.5%;
        width: 20%;
        transform: translateY(-50%) rotate(35deg);
        transform-origin: left center;
        animation-delay: 2.4s;
    }

    @@keyframes connectionFlow {
        0%

    {
        opacity: 0;
    }

    50% {
        opacity: 1;
    }

    100% {
        opacity: 0;
    }

    }

