        display: flex;
        justify-content: center;
        align-items: center;
    }

    .sensor-device {
        position: relative;
        text-align: center;
        
    }

      
    .sensor-icon {
        width: 70px;
        height: 70px;
        background: linear-gradient(135deg, #1451c4, #0f3a8c);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 15px;
        position: relative;
        z-index: 2;
        box-shadow: 0 5px 20px rgba(20, 81, 196, 0.3);
    }

        .sensor-icon i {
            color: white;
            font-size: 2rem;
        }

    .sensor-pulse {
        position: absolute;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 70px;
        height: 70px;
        border: 2px solid #1451c4;
        border-radius: 50%;
        animation: sensorPulse 2.5s ease-out infinite;
    }

    @@keyframes sensorPulse {
        0%

    {
        transform: translateX(-50%) scale(1);
        opacity: 1;
    }

    100% {
        transform: translateX(-50%) scale(2.5);
        opacity: 0;
    }

    }

    /* Gateway */
    .gateway {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .gateway-device {
        text-align: center;
        position: relative;
       
    }

     
    .gateway-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #ffd700, #ffb347);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 15px;
        box-shadow: 0 5px 20px rgba(255, 215, 0, 0.4);
        position: relative;
    }

        .gateway-icon i {
            color: #333;
            font-size: 2.2rem;
        }

    .gateway-activity {
        position: absolute;
        top: -5px;
        right: -5px;
        display: flex;
        gap: 3px;
    }

    .activity-dot {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        background: #00ff00;
        animation: activityBlink 1.5s ease-in-out infinite;
    }

    .dot-1 {
        animation-delay: 0s;
    }

    .dot-2 {
        animation-delay: 0.5s;
    }

    .dot-3 {
        animation-delay: 1s;
    }

    @@keyframes activityBlink {
        0%, 100%

    {
        opacity: 0.3;
    }

    50% {
        opacity: 1;
    }

    }

    /* Nube */
    .cloud {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .cloud-container {
        text-align: center;
        position: relative;
       
    }

      

    .cloud-icon {
        width: 110px;
        height: 70px;
        background: linear-gradient(135deg, #87ceeb, #4682b4);
        border-radius: 35px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 15px;
        position: relative;
        box-shadow: 0 8px 25px rgba(70, 130, 180, 0.4);
    }

        .cloud-icon::before {
            content: '';
            position: absolute;
            top: -20px;
            left: 20px;
            width: 30px;
            height: 30px;
            background: inherit;
            border-radius: 50%;
        }

        .cloud-icon::after {
            content: '';
            position: absolute;
            top: -15px;
            right: 20px;
            width: 25px;
            height: 25px;
            background: inherit;
            border-radius: 50%;
        }

        .cloud-icon i {
            color: white;
            font-size: 2.5rem;
            z-index: 1;
        }

    .cloud-particles {
        position: absolute;
        width: 130px;
        height: 90px;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
    }

    .data-particle {
        position: absolute;
        width: 5px;
        height: 5px;
        background: #1451c4;
        border-radius: 50%;
        animation: dataFloat 3.5s ease-in-out infinite;
    }

    .particle-1 {
        left: 15%;
        animation-delay: 0s;
    }

    .particle-2 {
        left: 35%;
        animation-delay: 0.9s;
    }

    .particle-3 {
        left: 65%;
        animation-delay: 1.8s;
    }

    .particle-4 {
        left: 85%;
        animation-delay: 2.7s;
    }

    @@keyframes dataFloat {
        0%

    {
        transform: translateY(0px);
        opacity: 0;
    }

    20% {
        opacity: 1;
    }

    80% {
        opacity: 1;
    }

    100% {
        transform: translateY(-70px);
        opacity: 0;
    }

    }

    /* Servicios de Salida */
    .output-services {
        display: flex;
        flex-direction: column;
        gap: 25px;
        align-items: center;
    }

    .service-device {
        position: relative;
        text-align: center;
        
    }

     

