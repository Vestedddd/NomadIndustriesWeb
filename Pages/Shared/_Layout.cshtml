<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NOMAD Industrial</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        /* Header Superior */
        .top-header {
            background-color: white;
            border-bottom: 1px solid #e0e0e0;
            padding: 8px 0;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1001;
            transition: transform 0.1s ease;
        }

            .top-header.hidden {
                transform: translateY(-100%);
            }

            .top-header .contact-info {
                color: #666;
                font-size: 14px;
                display: flex;
                align-items: center;
                gap: 20px;
            }

                .top-header .contact-info i {
                    color: #1451c4;
                    margin-right: 5px;
                }

        .social-icons {
            display: flex;
            gap: 10px;
        }

        .social-icon {
            width: 35px;
            height: 35px;
            border-radius: 50%;
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #1451c4;
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .social-icon:hover {
                background-color: #1451c4;
                color: white;
                transform: translateY(-2px);
            }

        /* Header Principal - siempre visible */
        .main-header {
            background-color: #1451c4;
            position: fixed;
            top: 52px; /* Altura del top-header */
            left: 0;
            right: 0;
            z-index: 1000;
            transition: top 0.1s ease;
            padding: 12px 0;
        }

            .main-header.scrolled {
                top: 0;
            }

        /* Logo con imagen */
        .logo {
            display: flex;
            align-items: center;
            text-decoration: none;
            color: white !important;
        }

            .logo:hover {
                color: white !important;
                text-decoration: none;
            }

        .logo-image {
            height: 60px;
            width: auto;
        }

        /* Navegación */
        .main-nav {
            display: flex;
            align-items: center;
            justify-content: flex-end;
            list-style: none;
            margin: 0;
            padding: 0;
            gap: 30px;
        }

        .nav-item {
            position: relative;
        }

        .nav-link {
            color: white !important;
            text-decoration: none;
            font-size: 14px;
            font-weight: 500;
            padding: 15px 0;
            position: relative;
            transition: color 0.3s ease;
        }

            /* Enlaces deshabilitados para Importaciones y Clientes */
            .nav-link.disabled {
                color: rgba(255, 255, 255, 0.5) !important;
                cursor: not-allowed;
                pointer-events: none;
                position: relative;
            }

               

        .nav-item:hover .nav-link.disabled::before {
            opacity: 1;
        }

        /* Efecto hover con barra inferior para enlaces activos */
        .nav-link:not(.disabled):hover {
            color: #e8f4fd !important;
            text-decoration: none;
        }

        .nav-link:not(.disabled)::after {
            content: '';
            position: absolute;
            bottom: -12px;
            left: 0;
            right: 0;
            height: 3px;
            background-color: white;
            border-radius: 2px;
            transform: scaleX(0);
            transition: transform 0.3s ease;
        }

        /* Barra visible en hover */
        .nav-link:not(.disabled):hover::after {
            transform: scaleX(1);
            opacity: 0.7;
        }

        /* Barra activa permanente para la página actual */
        .nav-item.active .nav-link::after,
        .nav-link.active::after {
            transform: scaleX(1) !important;
            opacity: 1 !important;
        }

        /* Espaciado para el contenido principal */
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        body {
            padding-top: 110px; /* top-header + main-header */
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

            body.scrolled {
                padding-top: 70px; /* solo main-header */
            }

        /* Hacer que el main ocupe el espacio disponible */
        main {
            flex: 1;
            padding-bottom: 0 !important;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .main-nav {
                gap: 15px;
            }

            .nav-link {
                font-size: 12px;
            }

            .logo-image {
                height: 35px;
            }
        }

        /* Footer Styles */
        .main-footer {
            background-color: #1451c4;
            color: white;
            padding: 60px 0 0 0;
            margin-top: 0;
            flex-shrink: 0;
        }

        .footer-content {
            padding-bottom: 40px;
        }

        .footer-logo {
            height: 50px;
            width: auto;
        }

        .footer-title {
            font-size: 16px;
            font-weight: bold;
            margin-bottom: 25px;
            color: white;
            letter-spacing: 1px;
        }

        .footer-links {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .footer-links li {
                margin-bottom: 12px;
            }

            .footer-links a {
                color: white;
                text-decoration: none;
                font-size: 14px;
                transition: color 0.3s ease;
            }

                /* Enlaces deshabilitados en el footer */
                .footer-links a.disabled {
                    color: rgba(255, 255, 255, 0.5);
                    cursor: not-allowed;
                    pointer-events: none;
                }

                .footer-links a:not(.disabled):hover {
                    color: #e8f4fd;
                    text-decoration: none;
                }

        .footer-contact {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .contact-item {
            display: flex;
            align-items: center;
            gap: 12px;
            color: white;
            font-size: 22px;
        }

            .contact-item i {
                font-size: 30px;
                width: 35px;
            }

        .footer-social {
            display: flex;
            gap: 15px;
        }

        .footer-social-icon {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            background-color: rgba(255, 255, 255, 0.1);
            border: 2px solid rgba(255, 255, 255, 0.3);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            text-decoration: none;
            font-size: 20px;
            transition: all 0.3s ease;
        }

            .footer-social-icon:hover {
                background-color: white;
                color: #1451c4;
                transform: translateY(-3px);
                text-decoration: none;
            }

        .footer-bottom {
            border-top: 1px solid rgba(255, 255, 255, 0.2);
            padding: 25px 0;
            margin-top: 20px;
        }

            .footer-bottom p {
                margin: 0;
                font-size: 14px;
                color: rgba(255, 255, 255, 0.8);
            }

        /* Footer Responsive */
        @@media (max-width: 768px) {
            .main-footer {
                padding: 40px 0 0 0;
            }

            .footer-logo {
                height: 40px;
            }

            .footer-title {
                font-size: 14px;
                margin-bottom: 20px;
            }

            .footer-links a,
            .contact-item {
                font-size: 13px;
            }

            .footer-social {
                justify-content: center;
            }

            .footer-social-icon {
                width: 40px;
                height: 40px;
                font-size: 18px;
            }
        }
    </style>
</head>
<body>
    <!-- Header Superior -->
    <div class="top-header" id="topHeader">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="contact-info">
                        <span><i class="fas fa-envelope"></i>ventas@nomadspa.cl</span>
                        <span><i class="fas fa-phone"></i>+56912345678</span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="social-icons justify-content-end d-flex">
                        <a href="https://tiktok.com" class="social-icon" target="_blank" title="TikTok">
                            <i class="fab fa-tiktok"></i>
                        </a>
                        <a href="https://instagram.com" class="social-icon" target="_blank" title="Instagram">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <a href="https://facebook.com" class="social-icon" target="_blank" title="Facebook">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="https://linkedin.com/company" class="social-icon" target="_blank" title="LinkedIn">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Header Principal -->
    <div class="main-header" id="mainHeader">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-3">
                    <a href="/" class="logo">
                        <img src="~/images/nomad-logo.png" alt="NOMAD Industrial" class="logo-image" />
                    </a>
                </div>
                <div class="col-md-9">
                    <ul class="main-nav">
                        <li class="nav-item">
                            <a href="/" class="nav-link" data-page="inicio">INICIO</a>
                        </li>
                        <li class="nav-item">
                            <a href="/productos" class="nav-link" data-page="productos">PRODUCTOS</a>
                        </li>
                        <li class="nav-item">
                            <a href="/servicios" class="nav-link" data-page="servicios">SERVICIOS</a>
                        </li>
                        <li class="nav-item">
                            <a href="/fabricaciones" class="nav-link" data-page="fabricaciones">FABRICACIONES</a>
                        </li>
                        <!-- IMPORTACIONES - Deshabilitado temporalmente hasta que se defina el contenido -->
                        <li class="nav-item">
                            <a href="#" class="nav-link disabled" data-page="importaciones">IMPORTACIONES</a>
                        </li>
                        <li class="nav-item">
                            <a href="/sobre-nosotros" class="nav-link" data-page="sobre-nosotros">SOBRE NOSOTROS</a>
                        </li>
                        <!-- CLIENTES - Deshabilitado temporalmente hasta que se defina el contenido -->
                        <li class="nav-item">
                            <a href="#" class="nav-link disabled" data-page="clientes">CLIENTES</a>
                        </li>
                        <li class="nav-item">
                            <a href="/contacto" class="nav-link" data-page="contacto">CONTACTO</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="main-footer">
        <div class="container">
            <div class="footer-content">
                <div class="row">
                    <!-- Logo -->
                    <div class="col-12 mb-4">
                        <a href="/">
                            <img src="~/images/nomad-logo.png" alt="NOMAD Industrial" class="footer-logo" />
                        </a>
                    </div>

                    <!-- Columnas principales -->
                    <div class="col-md-4 mb-4">
                        <h5 class="footer-title">ACCESO RÁPIDO</h5>
                        <div class="row">
                            <div class="col-6">
                                <ul class="footer-links">
                                    <li><a href="/">Inicio</a></li>
                                    <li><a href="/productos">Productos</a></li>
                                    <li><a href="/servicios">Servicios</a></li>
                                    <li><a href="/fabricaciones">Fabricaciones</a></li>
                                </ul>
                            </div>
                            <div class="col-6">
                                <ul class="footer-links">
                                    <!-- Enlaces deshabilitados en el footer también -->
                                    <li><a href="#" class="disabled">Importaciones</a></li>
                                    <li><a href="/sobre-nosotros">Sobre Nosotros</a></li>
                                    <li><a href="#" class="disabled">Clientes</a></li>
                                    <li><a href="/contacto">Contacto</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 mb-4">
                        <h5 class="footer-title">CONTÁCTANOS</h5>
                        <div class="footer-contact">
                            <div class="contact-item">
                                <i class="fas fa-envelope"></i>
                                <span>ventas@nomadspa.cl</span>
                            </div>
                            <div class="contact-item">
                                <i class="fas fa-phone"></i>
                                <span>+56912345678</span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 mb-4">
                        <h5 class="footer-title">SÍGUENOS</h5>
                        <div class="footer-social">
                            <a href="https://tiktok.com" class="footer-social-icon" target="_blank" title="TikTok">
                                <i class="fab fa-tiktok"></i>
                            </a>
                            <a href="https://instagram.com" class="footer-social-icon" target="_blank" title="Instagram">
                                <i class="fab fa-instagram"></i>
                            </a>
                            <a href="https://facebook.com" class="footer-social-icon" target="_blank" title="Facebook">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a href="https://linkedin.com/company" class="footer-social-icon" target="_blank" title="LinkedIn">
                                <i class="fab fa-linkedin-in"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Copyright -->
            <div class="footer-bottom">
                <div class="row">
                    <div class="col-12 text-center">
                        <p>&copy; 2025 NOMAD Industrial. Todos los derechos reservados.</p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Manejar el scroll del header
        let lastScrollTop = 0;
        const topHeader = document.getElementById('topHeader');
        const mainHeader = document.getElementById('mainHeader');
        const body = document.body;

        window.addEventListener('scroll', function() {
            let scrollTop = window.pageYOffset || document.documentElement.scrollTop;

            if (scrollTop > 50) {
                // Ocultar header superior
                topHeader.classList.add('hidden');
                mainHeader.classList.add('scrolled');
                body.classList.add('scrolled');
            } else {
                // Mostrar header superior
                topHeader.classList.remove('hidden');
                mainHeader.classList.remove('scrolled');
                body.classList.remove('scrolled');
            }

            lastScrollTop = scrollTop;
        });

        // Marcar el apartado activo
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname.toLowerCase();
            const navLinks = document.querySelectorAll('.nav-link');

            navLinks.forEach(link => {
                const linkPath = link.getAttribute('href').toLowerCase();
                const page = link.getAttribute('data-page');

                // No marcar como activos los enlaces deshabilitados
                if (!link.classList.contains('disabled')) {
                    if (linkPath === currentPath ||
                        (currentPath === '/' && page === 'inicio') ||
                        (currentPath.includes(page) && page !== 'inicio')) {
                        link.classList.add('active');
                    }
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>